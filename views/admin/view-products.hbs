<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-products" class="btn btn-success float-left">Add product</a>
    </div>
    <table class="table mt-5" id="productsTable">
      
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>Image</th>
      <th>Options</th>
  </thead>
  <tbody>
{{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td><img style="width: 50px;height:50px" src="/product-image/{{this._id}}.jpg" alt=""></td>
<td>
  <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
  <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick=" return confirm('are you sure {{this.name}}')"> Delete </a>

</td>

    </tr>
   {{/each}}
  </tbody>
</table>
  </div>
</section>
<section>
  <script>
$(function () {
    $('#productsTable').DataTable();
} );
</script>
</section>