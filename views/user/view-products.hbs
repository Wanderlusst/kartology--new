
    <section>
      <div class="container mt-5">

        <div class="row">
            {{#each products}}
          <div class="col-md-3  p-3">
            <div class="card" style="width: 15rem; height: 25rem;">
              <img
                class="card-img-top"
                src="/product-image/{{this._id}}.jpg"
                alt="Card image cap"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                  <p class="card-text">Starting at Rs.{{this.price}}</p>
                <p class="card-text">{{this.description}}</p>
          
               <button onclick="addToCart('{{this._id}}')" class="btn btn-danger">Add to cart</button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      </div>
    </section>
